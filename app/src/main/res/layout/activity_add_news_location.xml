<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="416dp"
        android:layout_height="349dp"
        android:scaleType="fitXY"
        android:src="@drawable/lo1"
        app:layout_constraintBottom_toTopOf="@+id/card_add_place"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">


    </ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_add_place"
        android:layout_width="match_parent"
        android:layout_height="491dp"
        android:elevation="100dp"
        android:visibility="visible"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="324dp"
                android:layout_margin="10dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="50dp">
                       <Spinner
                           android:id="@+id/type"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="6"
                           android:animateLayoutChanges="false"
                           android:background="@android:color/transparent"
                           android:dropDownWidth="match_parent"
                           android:popupBackground="@drawable/shapspinner"
                           android:spinnerMode="dropdown"
                           android:gravity="center|right"
                           android:outlineSpotShadowColor="@color/colorPrimary"
                           android:padding="4dp">

                       </Spinner>
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:background="@drawable/ic_down_24"
                           android:layout_weight="1">

                       </TextView>

                   </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#8ABAB7B7" />

                    <EditText
                        android:id="@+id/ed_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:hint="title"
                        android:inputType="textWebEmailAddress"
                        android:padding="4dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#8ABAB7B7" />

                    <EditText
                        android:id="@+id/ed_det"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:hint="detailes"
                        android:inputType="textImeMultiLine"
                        android:padding="4dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#8ABAB7B7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/add_location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="@drawable/ic_baseline_add_location_24">

                        </TextView>

                        <EditText
                            android:id="@+id/ed_latitude"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:hint="latitude"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/ed_longitude"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:hint="latitude"
                            android:textSize="15sp" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#8ABAB7B7" />

                    <Button
                        android:id="@+id/ed_save"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/pink_style_gard2"
                        android:text="save "
                        android:textColor="@color/white"
                        android:textStyle="bold"></Button>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>